@model ConsultaCep.Web.Models.ContaModel
@{
    ViewData["Title"] = "Remover Conta";
}

<link href="~/css/Conta.css" rel="stylesheet" />

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />

    <div class="container border p-3 mt-2">
        <h1 class="text-primary">Remover Conta</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danter"></div>

            <div class="col-2">
                <label asp-for="Nome" class="control-label pt-2 font-20"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Nome" class="form-control" disabled />
            </div>

            <div class="col-2">
                <label asp-for="Descricao" class="control-label pt-2 font-20"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Descricao" class="form-control" rows="5" disabled></textarea>
            </div>
            

            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control">Voltar</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}